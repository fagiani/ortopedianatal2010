!!! Strict
%html{ :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %title XIV Congresso Norte-Nordeste de Ortopedia e Traumatologia
    %meta{ :content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type" }
    %meta{ :name => "author", :content => "Participe.de - Tink!" }
    %meta{ :name => "description", :content => "XIV Congresso Norte-Nordeste de Ortopedia e Traumatologia" }
    %meta{ :name => "keywords", :content => "XIV, congresso, norte-nordeste, ortopedia, traumatologia" }
    - %w(reset text 960 style sifr jquery.fancybox-1.3.1).each do |css_file|
      = css_tag("#{css_file}.css")
    / [if IE]<link rel="stylesheet" href="css/png_fix.css" type="text/css" media="screen" />
    / [if IE 7]<link rel="stylesheet" href="css/ie7.css" type="text/css" media="screen" />
    / [if IE 6]<link rel="stylesheet" href="css/ie6.css" type="text/css" media="screen" />
  %body
    #header
      %div{:class => "container_12 #{layout_type}"}
        #menu.grid_12
          %ul
            - site.posts.each do |post|
              %li{:class => "#{'current' if (page.title == post.title)}"}
                %a{ :href => post.url}= post.title
        #header-page.grid_12
          #sides.grid_4.alpha
            %span
              %strong 22 a 24 de abril de 2010
              %p Centro de Convenções | Natal-RN   
          #logo.grid_4
            %img{ :src => "/images/logo-orto.png", :alt => "XIV Congresso Norte-Nordeste de Ortopedia e Traumatologia" }
          #sides.grid_4.omega
            %span#left        
              Faltam
              %strong#countdown 0 Dias
              %p para o evento
            %script{ :src => 'js/theme.js', :type => 'text/javascript' }
    #container.container_12
      #content
        - if layout_type == 'internal_page'
          #interna.grid_12
            = content
        - else
          #banner.grid_12
            %img{ :src => "images/banner.jpg", :alt => "XIV Congresso Norte-Nordeste de Ortopedia e Traumatologia"}
          #content.grid_8
            = content
          #inscricoes.grid_4
            %a{ :href => "/inscricao"} 
              %img{ :src => "/images/inscricao.png", :alt => "XIV Congresso Norte-Nordeste de Ortopedia e Traumatologia"}
    .clear
    #footer
      .container_12
        #sponsor
          #promocao.grid_2.alpha
            %h6 PROMOÇÃO
            %a{:href => "http://www.sbot.org.br", :target => "_blank" }
              %img{ :src => "images/patrocinio/sbot.png", :alt => "Sociedade Brasileira de Ortopedia e Traumatologia – SBOT", :height => "63px"}
          #realizacao.grid_2
            %h6 REALIZAÇÃO
            %a{ :href => "http://www.sbot.org.br", :target => "_blank" }
              %img{ :src => "images/patrocinio/sbotrn logo.jpg", :alt => "Sociedade Brasileira de Ortopedia e Traumatologia – SBOT/RN", :height => "63px"}
          #apoio.prefix_1.grid_4
            %h6 APOIO
            %a{ :href => "http://www.natal.rn.gov.br/", :target => "_blank" }
              %img{ :src => "images/patrocinio/prefeitura_natal.jpg", :alt => "Prefeitura do Natal"}
            %a{ :href => "http://www.rn.gov.br/", :target => "_blank" }
              %img{ :src => "images/patrocinio/governo_rn.png", :alt => "Governo de Todos"}
            %a{ :href => "http://www.caern.rn.gov.br/", :target => "_blank"}
              %img{ :src => "images/patrocinio/logo-caern.jpg", :alt => "Caern"}
          #organizacao.prefix_1.grid_2.omega
            %h6 ORGANIZAÇÃO
            %a{ :href => "http://www.ideiaseventos.com.br/", :target => "_blank" }
              %img{ :src => "images/patrocinio/logo-ideias.jpg", :alt => "Idéias Eventos", :height => "70px" }
          #patrocinio.grid_12.alpha.omega{:style => 'margin-top: 20px'}
            %h6 PATROCÍNIO
            %a(href = "http://www.unimednatal.com.br/" target = "_blank")
              %img(src = "images/patrocinio/logo-unimed.jpg" alt = "Unimed - Natal") 
            %a(href = "http://www.ecomed.com.br/" target = "_blank")
              %img(src = "images/patrocinio/logo-ecomed.gif" alt = "ecomed") 
            %a(href = "http://www.biomecanica.com.br/" target = "_blank")
              %img(src = "images/patrocinio/logo-biomecanica.gif" alt = "Biomecanica") 
            %img(src = "images/patrocinio/opera.gif" alt = "Opera Materiais Cirúrgicos") 
            %a(href = "http://www.ortoplan.com.br/" target = "_blank")
              %img(src = "images/patrocinio/logo-ortoplan.gif" alt = "Ortoplan") 
            %a(href = "http://www.medicalshopdf.com.br/" target = "_blank")
              %img(src = "images/patrocinio/logo-medicalshop.gif" alt = "Medical Shop") 
            %a(href = "http://www.hospitaldocoracao.com.br/" target = "_blank")
              %img(src = "images/patrocinio/logo-hc.gif" alt = "Hospital do Coração")
            %img(src = "images/patrocinio/mol-logo.gif" alt = "Mol Mercantil Ortomédica")
            %a(href = "http://hospitalpapi.com.br/" target = "_blank")
              %img(src = "images/patrocinio/delfin.gif" alt = "Hospital PAPI")
            %br
            %img(src = "images/patrocinio/logo-memorial.jpg" alt = "Hospital Memorial")
            %a(href = "http://www.saolucasrn.com.br/" target = "_blank")
              %img(src = "images/patrocinio/saolucas.gif" alt = "Casa de Saúde São Lucas")
            %a(href = "http://www.unicrednatal.com.br/" target = "_blank")
              %img(src = "images/patrocinio/unicred.gif" alt = "Unicred")
            %a(href = "http://www.sanofi-aventis.com.br/" target = "_blank")
              %img(src = "images/patrocinio/logo-sanofi.jpg" alt = "Sanofi Aventis")
            %a(href = "http://www.fqm.com.br/" target = "_blank")
              %img(src = "images/patrocinio/logo-fqm.gif" alt = "FQM Farmoquímica")
            %a(href = "http://www.irn.com.br/" target = "_blank")
              %img(src = "images/patrocinio/logo-irn2.gif" alt = "Instituto de Radiologia") 
            %img(src = "images/patrocinio/logo-cardio-nuclear2.jpg" alt = "Cardio Nuclear")
            %img(src = "images/patrocinio/logo-cremern.jpg" alt = "CREMERN")
            %a(href = "http://www.farmasa.com.br/" target = "_blank")
              %img(src = "images/patrocinio/farmasa.gif" alt = "Farmasa")

    %script{ :src => 'http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.min.js', :type => 'text/javascript' }
    - %w{sifr  sifr-config jquery.validate localization/messages_ptbr }.each do |js|
      = script_tag("#{js}.js")
    - if variable(:javascript_imports)
      - variable(:javascript_imports).split(' ').each do |js|
        %script{ :src => "js/#{js}.js", :type => 'text/javascript'}
    - if variable(:javascript)
      %script{:type => 'text/javascript'}
        = variable(:javascript)

    :javascript
      var gaJsHost = (("https:" == document.location.protocol) ? "https://ssl." : "http://www.");
      document.write(unescape("%3Cscript src='" + gaJsHost + "google-analytics.com/ga.js' type='text/javascript'%3E%3C/script%3E"));
    :javascript
      try {
        var pageTracker = _gat._getTracker("UA-12839022-1");
        pageTracker._trackPageview();
      }
      catch(err) {}
