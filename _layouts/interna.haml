!!! Strict
%html{ :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %title XIV Congresso Norte-Nordeste de Ortopedia e Traumatologia
    %meta{ :content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type" }
    %meta{ :name => "author", :content => "Participe.de - Tink!" }
    %meta{ :name => "description", :content => "XIV Congresso Norte-Nordeste de Ortopedia e Traumatologia" }
    %meta{ :name => "keywords", :content => "XIV, congresso, norte-nordeste, ortopedia, traumatologia" }
    - %w(reset text 960 style sifr).each do |css_file|
      = css_tag("#{css_file}.css")
    %script{ :type => "text/javascript", :src => "http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.min.js" }
    - %w(sifr sifr-config theme).each do |js_file|
      = script_tag("#{js_file}.js")
  %body
    #container_navigation
      #navigation.container_12
        %ul#main_menu.menu
          - site.posts.each do |post|
            %li{:class => "#{'current' if (page.title == post.title)}"}
              %a{ :href => post.url}= post.title
    #main
      #container_header_featured_content
        #container_pre_header_featured_content.interna
          #header.container_12
            #date_where.grid_4
              %span.informacoes.notext
                20 a 22 de Outubro de 2010
                %br
                Centro de Convenções | Natal-RN
            #logo.grid_4
              %h1
                %a.notext{ :href => "/" }
                  XIV Congresso Norte-Nordeste de Ortopedia e Traumatologia
            #time_remain.grid_4
              %div.informacoes
                %span.remain_text_flash
                  Faltam
                %span#days_remain.remain_days_flash
                  0 Dias
                %br
                %span.remain_text_flash
                  para o evento
          #content.container_12
            = content
    #footer
      .container_12
        #promocao.grid_2
          %h3
            PROMOÇÃO
          %a.notext.sbot{ :href => "/", :target => "_blank" }
            Sociedade Brasileira de Ortopedia e Traumatologia
        #realizacao.grid_2
          %h3
            REALIZAÇÃO
          %a.notext.sbotrn{ :href => "/", :target => "_blank" }
            Sociedade Brasileira de Ortopedia e Traumatologia - Rio Grande do Norte
        #apoio.grid_5
          %h3
            APOIO
          %a.notext.prefeitura_natal{ :href => "http://www.natal.rn.gov.br", :target => "_blank" }
            Prefeitura do Natal
          %a.notext.governo_rn{ :href => "http://www.rn.gov.br/", :target => "_blank" }
            Governo do Estado do Rio Grande do Norte
        #organizacao.grid_3
          %h3
            ORGANIZAÇÃO
          %a.notext.ideias{ :href => "http://www.ideiaseventos.com.br/", :target => "_blank" }
            Ídeias Promoções e Eventos - 84 32114358 - www.ideiaseventos.com.br
